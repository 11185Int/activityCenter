/**app.wxss**/
@import 'style/weui.wxss';

view, text {
  font-size: 0.8rem;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
} 

.hd {
  font-size: 1rem;
  align-self: center;
  display: flex;
  flex-direction: row;
  width: 80%;
}

.head {
  align-self: center;
  margin: 20rpx;
}

.image {
  width: 50rpx;
  height: 50rpx;
  align-self: center;
}

.input {
  padding-left: 20rpx;
  padding-right: 20rpx; 
  width: 300rpx;
}

.button {
position:relative;
display:block;
margin-left:auto;
margin-right:auto;
padding-left:14px;
padding-right:14px;
box-sizing:border-box;
text-align:center;
text-decoration:none;
line-height:2.55555556;
border-radius:5px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000000;
background-color:#F8F8F8;
font-size: 0.8rem;
}

button[type="save"] {
width: 400rpx;
color:#FFFFFF;
background-color:#E64340;
margin-top:100rpx;
margin-bottom:20rpx;
}

button[type="create"] {
color:#FFFFFF;
background-color:#1AAD19;
margin-top: 20rpx;
margin-bottom:20rpx;
margin-left: 100rpx;
margin-right: 100rpx;
}

button[type="issue"] {
color:#FFFFFF;
background-color:#E64340;
width: 400rpx;
margin-top:20rpx;
margin-bottom:20rpx;
}

button[type="join"] {
color:#FFFFFF;
background-color:#E64340;
margin-top:20rpx;
margin-bottom:20rpx;
width: 250rpx;
border-radius: 5px;
text-align: center;
font-size: 0.8rem;
}

button[type="refuse"] {
color:#FFFFFF;
background-color:#aaaaaa;
margin-top:20rpx;
margin-bottom:20rpx;
width: 250rpx;
border-radius: 5px;
text-align: center;
font-size: 0.8rem;
}

.textarea-border {
  border: 1rpx solid #D9D9D9;
  padding-left: 20rpx; 
  padding-right: 20rpx;
}

.list-item {
  padding-top: 20rpx;
  padding-left: 60rpx;
  display: flex;
  flex-direction: column;
  font-size: 16px;
}

.status {
  padding: 10rpx;
  font-size: 14px;
  text-align: center;
  line-height: 2.55555556;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #fff;
  background-color: #1AAD19;
}

.status-close {
  padding: 10rpx;
  font-size: 14px;
  text-align: center;
  line-height: 2.55555556;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #fff;
  background-color: #aaaaaa;
}

.title {
  font-size: 1rem;
  margin-left: 60rpx;
  margin-right: 60rpx;
}

.creater {
  display: flex;
  flex-direction: row;
  width: 80%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.creater-name {
  margin: 10rpx;
  margin-left: 20rpx;
}

.member {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: #aaaaaa;
  padding: 20rpx;
  margin-right: 60rpx;
  border-radius: 30rpx;
}

.member-item {
  margin-right: 20rpx;
  align-self: center;
}

.actimglist {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.actimg {
    width:100%;
    height:260rpx;
}

.operate-img {
    width: 80rpx;
    height: 80rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    margin-top:200rpx;
    margin-bottom: 20rpx;
}

